    "p-all": "^5.0.0",
    "pick-random": "^4.0.0",
    "pluralize": "^8.0.0",
    "postcss": "^8.0.0",
    "postcss-preset-env": "^9.0.0",
    "prettier": "^3.0.0",
    "pretty-bytes": "^6.0.0",
    "random-useragent": "^0.5.0",
    "rehype-autolink-headings": "^7.0.0",
