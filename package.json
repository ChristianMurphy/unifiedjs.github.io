    "vfile-reporter": "^8.0.0",
    "xo": "^0.59.0",
    "yaml": "^2.0.0"
  },
  "scripts": {
    "build": "tsc --build --clean && tsc --build && type-coverage",
    "start": "budo --dir build",
    "format": "remark . -qo && prettier . -w --log-level warn && stylelint \"**/*.css\" --fix && xo --fix",
    "crawl:sponsors": "mkdir -p data; node crawl/sponsors",
    "crawl:team": "mkdir -p data; node crawl/team",
    "crawl:ecosystem": "mkdir -p data; mkdir -p data/readme; node crawl/ecosystem",
    "crawl": "npm run crawl:sponsors && npm run crawl:team && npm run crawl:ecosystem",
    "generate:asset": "node generate/asset",
    "generate:pages": "node generate/index",
    "generate:theme": "cp node_modules/highlight.js/styles/atom-one-light.css build/syntax-light.css && cp node_modules/highlight.js/styles/atom-one-dark.css build/syntax-dark.css",
    "generate": "npm run generate:asset && npm run generate:pages && npm run generate:theme",
    "test": "npm run format && npm run crawl && npm run generate"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "overrides": [
      {
        "files": [
          "**/*.d.ts"
        ],
        "rules": {
          "@typescript-eslint/array-type": [
            "error",
            {
              "default": "generic"
            }
          ],
          "@typescript-eslint/ban-types": [
            "error",
            {
              "extendDefaults": true
            }
          ],
          "@typescript-eslint/consistent-type-definitions": [
            "error",
            "interface"
          ]
        }
      }
    ],
    "prettier": true,
    "rules": {
      "complexity": "off",
      "logical-assignment-operators": "off",
      "no-await-in-loop": "off",
      "unicorn/no-array-callback-reference": "off",
      "unicorn/no-array-for-each": "off",
      "unicorn/no-array-reduce": "off",
      "unicorn/prefer-at": "off",
      "unicorn/prefer-string-replace-all": "off",
      "unicorn/prevent-abbreviations": "off"
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard"
    ],
    "rules": {
      "no-descending-specificity": null
    }
  }
}
